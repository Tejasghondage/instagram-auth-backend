<?xml version='1.0' encoding='utf-8'?>
<hibernate-configuration>
    <session-factory>
    
        <!-- ================= Database Connection Settings ================= -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/instagram</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">admin@123</property>

        <!-- ================= JDBC Dialect ================= -->
        <!-- Tell Hibernate which SQL dialect to use -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        
        <!-- ================= Hibernate Behavior Settings ================= -->
        <!-- Shows SQL queries on console -->
        <property name="show_sql">true</property>
        <!-- Format SQL output -->
        <property name="format_sql">true</property>
        <!-- Update table automatically based on entity -->
        <property name="hibernate.hbm2ddl.auto">update</property>
    </session-factory>
</hibernate-configuration>
